def build(bld):

    bld.CryEngineModule(

        # Settings
        target              = 'CryPhysics',
        vs_filter           = 'CryEngine',
        copyright_org       = 'Amazon-CryTek',
        file_list           = ['cryphysics.waf_files'],
        platforms           = ['all'],
        configurations      = ['all'],
        pch                 = 'StdAfx.cpp',
        use                 = ['AzCore'],

        # Platform Specific
       

        darwin_cxxflags     = ['-Wno-shift-negative-value'],

        ios_cxxflags        = ['-Wno-shift-negative-value'],

        appletv_cxxflags    = ['-Wno-shift-negative-value'],

        android_armv7_clang_cxxflags  = ['-Wno-shift-negative-value'],

        # Testing
        test_all_file_list  = ['cryphysics_test.waf_files'],
    )

    bld.CryResourceCompilerModule(

        # Settings
        target             = 'CryPhysicsRC',
        vs_filter          = 'RC',
        copyright_org      = 'Amazon-CryTek',
        file_list          = 'cryphysics.waf_files',
        platforms          = ['win', 'darwin'],
        configurations     = ['debug_all',
                              'profile_all'],
        use                = ['AzCore'],

        # Testing
        test_all_file_list = ['cryphysics_test.waf_files'],
    )
