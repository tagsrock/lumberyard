from waflib.Build import BuildContext

SUBFOLDERS = [
    '../GridMate/GridMate'
    ]

def build(bld):
    bld.CryEngineStaticLibrary(
        target      = 'GridMateForTools',
        vs_filter   = 'Network',
        file_list   = ['../GridMate/GridMate/gridmate.waf_files'],
        platforms   = ['all'],
        configurations  = ['all'],
        disable_pch = True,
        includes = ['../GridMate'],
        use         = ['AzCore'],
        export_includes = ['../GridMate'],

		defines = ['GRIDMATE_FOR_TOOLS'],

        win_cxxflags=[
            '/W4', # warning level
            ],

       

       

        android_cxxflags=[
            '-Werror', # warnings as errors
            '-Wall', # warning level
            ],
        
        ios_cxxflags=[
            '-Werror', # warnings as errors
            '-Wall', # warning level
            ],
        
        appletv_cxxflags=[
            '-Werror', # warnings as errors
            '-Wall', # warning level
            ],
        
        darwin_cxxflags=[
            '-Werror', # warnings as errors
            '-Wall', # warning level
            ]
    )
