def build(bld):

    msvc_cxx_flags = [
        '/W4', # warning level
    ]
    clang_flags = [
        '-Werror',  # warnings as errors
        '-Wall'     # warning level
    ]

    bld.CryEngineStaticLibrary(

        # Settings
        target              = 'AzToolsFramework',
        vs_filter           = 'AZ Framework',
        file_list           = ['aztoolsframework.waf_files'],
        platforms           = ['win', 'darwin'],
        configurations      = ['all'],
        disable_pch         = True,
        features            = ['qt5'],
        use                 = ['AzFramework',
                               'SQLITE'],
        uselib              = ['QT5CORE',
                               'QT5GUI',
                               'QT5WIDGETS'],
        includes            = ['..'],
        export_includes     = ['..'],

        defines             = ['QT_QML_DEBUG'],

        debug_defines       = ['ENABLE_UNDOCACHE_CONSISTENCY_CHECKS'], # we want this on ONLY in debug, not when AZ_DEBUG_BUILD is enabled.

        # Platform specific
        win_file_list       = ['aztoolsframework_win.waf_files'],
        win_cxxflags        = msvc_cxx_flags,
        win_features        = ['crcfix'],

        darwin_file_list    = ['aztoolsframework_osx.waf_files'],
        darwin_cxxflags     = clang_flags + ['-Wno-non-pod-varargs'] # ToDo: fixme (moved from the global clang settings)
    )
