def build(bld):

    # Build for EditorAudioControlsEditor
    bld.CryStandAlonePlugin(

        # Settings
        target              = 'EditorAudioControlsEditor',
        vs_filter           = 'Sandbox/Plugins/AudioControlsEditor',
        copyright_org       = 'Amazon-CryTek',
        file_list           = 'editoraudiocontrolseditor.waf_files',
        platforms           = ['win'],
        configurations      = ['debug', 'debug_test', 'profile', 'profile_test'],
        pch                 = "StdAfx.cpp",
        use                 = ['EditorCommon', 'CrySoundSystem'],
        uselib              = ['QT5CORE',
                               'QT5GUI',
                               'QT5WIDGETS'],
        features            = ['qt5'],
        includes            = ['common'],

        # Testing
        test_all_file_list = ['editoraudiocontrolseditor_test.waf_files'],
    )

    bld.recurse('common')
    bld.recurse('EditorNoSound')
    bld.recurse('EditorWwise')
