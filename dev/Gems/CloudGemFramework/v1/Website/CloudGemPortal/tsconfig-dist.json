{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./",
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true        
    },
    "exclude": [
        "node_modules",
        "jspm_packages",
        "app/dist/**",
        "bundles",
        "dist",
        "prototype_site",
        "Scripts",
        "typings",
        "obj",
        "bin",
        "content"
    ]   
}
